<div class="text-center">
  <h2>{{name}}</h2>  
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div id="div_btnAddCommentary" style="border-bottom: solid black; margin-bottom:20px; padding-bottom:20px;">
  <button id="btn_addCommentary" class="btn btn-primary" type="submit">Add new commentary</button>
</div>


<div id="all_commentaries">
  <h1>Commentaries</h1>
{{#if commentaries_dashboard_detail}}
  {{#each commentaries_dashboard_detail as |commentarie| }}
    <p>
    {{commentarie.commentary}}. Posted by  {{commentarie.user.name}} {{format_date commentarie.date_created}} 
    </p>
  {{/each}}
{{else}}
  <p>There is no commentaries</p>
{{/if}}
</div>
 


 <div class="col-md-6" id="newCommentary_form" style="display:none">
    <h3>Create a New Commentary:</h3>

    <form class="form new-project-form">       
      <div class="form-group">
        <label for="post-desc">Commentary:</label>
        <textarea class="form-input" id="commentary" name="commentary"></textarea>
      </div>
      <div class="form-group">
        <button id="btn_create_commentary" type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


  <script src="/js/commentary.js"></script>